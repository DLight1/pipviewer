{
  "manifest_version": 2,

  "name": "Picture in Picture Viewer",
  "description": "Docks your favourite stuff in a small floating window! Including webpages, videos, chrome apps and even your local files.",
  "version": "0.2",
  "author": "Chong Zhang",

  "icons": {"128": "icon128.png"},

  "background": {
    "scripts": ["eventPage.js"],
    "persistent": true
  },

  "browser_action": {
    "default_icon": "icon128.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "tabs",
    "webRequest",
    "webRequestBlocking",
    "*://*/*"
  ],
  "content_security_policy": "script-src 'self' https://ssl.google-analytics.com https://ajax.googleapis.com/ajax/libs/jquery/1.10.2/jquery.min.js; object-src 'self'"
}
